<Window x:Class="Notebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notebook"
        mc:Ignorable="d"
        Title="Блокнот" Height="520" Width="800" MaxHeight="520" MinHeight="520" MaxWidth="800" MinWidth="800"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Height="30">
            <MenuItem Header="Выйти" Height="30" Padding="5" FontSize="12" Command="{Binding LogoutCommand}"></MenuItem>
        </Menu>
        <TabControl Grid.Row="1">
            <TabItem Header="Блокнот">
                <StackPanel>
                    <TextBox 
                        Padding="10"
                        FontSize="16"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Visible"
                        Height="350" Text="{Binding UserNote}"></TextBox>
                    <Button Width="250" Margin="10" Command="{Binding SaveNoteCommand}">Сохранить</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Клавиатурный почерк">
                Создание и настройка клавиатурного почерка пользователя
            </TabItem>
            <TabItem Header="Графический ключ">
                <StackPanel>
                    <Button Width="200" HorizontalAlignment="Left" Margin="5" Command="{Binding ChooseImage}" >Выбрать картинку</Button>
                    <Image Name="image" MaxWidth="600" MinWidth="600" MaxHeight="300" MinHeight="300" Source="{Binding Image}" MouseLeftButtonDown="Image_OnMouseLeftButtonDown"></Image>
                    <Button Width="200" HorizontalAlignment="Left" Margin="5" Click="ButtonBase_OnClick" Command="{Binding SaveCommand}">Сохранить</Button>

                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
